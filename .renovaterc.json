{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":dependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchDepTypes": [
        "*"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "fast-forward",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true,
  "postUpdateOptions": [
    "gomodTidyE",
    "gomodMassage",
    "gomodUpdateImportPaths"
  ]
}
